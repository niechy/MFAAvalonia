<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Styles.Resources>
        <FontFamily x:Key="DefaultFontFamily">Segoe UI Variable, Segoe UI,Microsoft YaHei UI, Microsoft YaHei,FangSong,SimSun,Microsoft JhengHei,PingFang SC,Ubuntu, Noto Sans CJK SC, avares://SukiUI/CustomFont#Alibaba PuHuiTi 3.0</FontFamily>
        <FontWeight x:Key="DefaultDemiBold">DemiBold</FontWeight>
    </Styles.Resources>

    <Design.PreviewWith>
        <StackPanel Margin="20" Spacing="10">
            <TextBlock Text="SukiUI default text" />
            <SelectableTextBlock Text="SukiUI default text" />
            <Button Content="SukiUI default text" />
        </StackPanel>
    </Design.PreviewWith>

    <Style
        Selector="TextBlock, SelectableTextBlock, TextBox, Button, RepeatButton, ToggleButton, RadioButton, SplitButton, DropDownButton">
        <Setter Property="TextElement.FontFamily" Value="{DynamicResource DefaultFontFamily}" />
    </Style>

</Styles>
<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mdc="clr-namespace:Markdown.Avalonia.Controls;assembly=Markdown.Avalonia"
        xmlns:ctxt="clr-namespace:ColorTextBlock.Avalonia;assembly=ColorTextBlock.Avalonia">

    <!-- ==================== 基础文本样式 ==================== -->
    <Style Selector=".Markdown_Avalonia_MarkdownViewer ctxt|CTextBlock">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Margin" Value="0,5" />
        <Setter Property="Foreground" Value="{DynamicResource SukiText}" />
    </Style>
    <Style Selector=".Markdown_Avalonia_MarkdownViewer TextBlock">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Foreground" Value="{DynamicResource SukiText}" />
    </Style>

    <!-- ==================== 标题样式 ==================== -->
    <Style Selector=".Markdown_Avalonia_MarkdownViewer ctxt|CTextBlock.Heading1">
        <Setter Property="FontSize" Value="30" />
        <Setter Property="Margin" Value="0,0,15,0" />
        <Setter Property="FontWeight" Value="UltraBold" />
        <Setter Property="Foreground" Value="{DynamicResource SukiText}" />
    </Style>
    <Style Selector=".Markdown_Avalonia_MarkdownViewer ctxt|CTextBlock.Heading2">
        <Setter Property="Margin" Value="5,10,15,10" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{DynamicResource SukiText}" />
    </Style>
    <Style Selector=".Markdown_Avalonia_MarkdownViewer ctxt|CTextBlock.Heading3">
        <Setter Property="Margin" Value="5,10,10,10" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{DynamicResource SukiText}" />
    </Style>
    <Style Selector=".Markdown_Avalonia_MarkdownViewer ctxt|CTextBlock.Heading4">
        <Setter Property="Margin" Value="5,10,5,10" />
        <Setter Property="FontSize" Value="17" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{DynamicResource SukiText}" />
    </Style>
    <Style Selector=".Markdown_Avalonia_MarkdownViewer ctxt|CTextBlock.Heading5">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{DynamicResource SukiText}" />
    </Style>
    <Style Selector=".Markdown_Avalonia_MarkdownViewer ctxt|CTextBlock.Heading6">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{DynamicResource SukiText}" />
    </Style>

    <!-- ==================== 行内代码样式 (带圆角) ==================== -->
    <Style Selector=".Markdown_Avalonia_MarkdownViewer ctxt|CCode">
        <Setter Property="Foreground" Value="{DynamicResource SukiText}" />
        <Setter Property="Background" Value="{DynamicResource SukiMediumBorderBrush}" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="4,2" />
    </Style>

    <!-- ==================== 代码块样式 ==================== -->
    <Style Selector=".Markdown_Avalonia_MarkdownViewer Border.CodeBlock">
        <Setter Property="BorderBrush" Value="{DynamicResource SukiBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Margin" Value="5,5,5,5" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Background" Value="{DynamicResource SukiMediumBorderBrush}" />
    </Style>
    <Style Selector=".Markdown_Avalonia_MarkdownViewer TextBlock.CodeBlock">
        <Setter Property="FontFamily" Value="Consolas, Microsoft YaHei, monospace" />
        <Setter Property="Foreground" Value="{DynamicResource SukiText}" />
    </Style>
    <Style Selector=".Markdown_Avalonia_MarkdownViewer ScrollViewer.CodeBlock">
        <Setter Property="Padding" Value="10,8" />
    </Style>

    <!-- 代码块 Header 样式 -->
    <Style Selector=".Markdown_Avalonia_MarkdownViewer DockPanel.CodeBlockHeader">
        <Setter Property="Background" Value="{DynamicResource SukiBorderBrush}" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    <Style Selector=".Markdown_Avalonia_MarkdownViewer PathIcon.CodeBlockExpandIcon">
        <Setter Property="Foreground" Value="{DynamicResource SukiLowText}" />
    </Style>
    <Style Selector=".Markdown_Avalonia_MarkdownViewer TextBlock.CodeBlockLangLabel">
        <Setter Property="Foreground" Value="{DynamicResource SukiText}" />
    </Style>
    <Style Selector=".Markdown_Avalonia_MarkdownViewer PathIcon.CodeBlockCopyIcon">
        <Setter Property="Foreground" Value="{DynamicResource SukiLowText}" />
    </Style>
    <Style
        Selector=".Markdown_Avalonia_MarkdownViewer Button.CodeBlockCopyButton:pointerover PathIcon.CodeBlockCopyIcon">
        <Setter Property="Foreground" Value="{DynamicResource SukiPrimaryColor}" />
    </Style>

    <!-- 无容器样式 -->
    <Style Selector=".Markdown_Avalonia_MarkdownViewer Border.NoContainer">
        <Setter Property="BorderBrush" Value="{DynamicResource SukiDangerColor}" />
    </Style>

    <!-- ==================== Note 样式 ==================== -->
    <Style Selector=".Markdown_Avalonia_MarkdownViewer Border.Note">
        <Setter Property="Margin" Value="5,5,5,5" />
        <Setter Property="BorderBrush" Value="{DynamicResource SukiBorderBrush}" />
        <Setter Property="BorderThickness" Value="3" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Background" Value="{DynamicResource SukiCardBackground}" />
    </Style>
    <Style Selector=".Markdown_Avalonia_MarkdownViewer ctxt|CTextBlock.Note">
        <Setter Property="Margin" Value="10,5" />
    </Style>

    <!-- ==================== 列表样式 ==================== -->
    <Style Selector=".Markdown_Avalonia_MarkdownViewer Grid.List">
        <Setter Property="Margin" Value="12,0,0,0" />
    </Style>
    <Style Selector=".Markdown_Avalonia_MarkdownViewer ctxt|CTextBlock.ListMarker">
        <Setter Property="Margin" Value="0,5,5,5" />
    </Style>

    <!-- ==================== 表格样式 ==================== -->
    <Style Selector=".Markdown_Avalonia_MarkdownViewer Border.Table">
        <Setter Property="Margin" Value="5" />
        <Setter Property="BorderThickness" Value="0,0,1,1" />
        <Setter Property="BorderBrush" Value="{DynamicResource SukiBorderBrush}" />
    </Style>
    <Style Selector=".Markdown_Avalonia_MarkdownViewer Grid.Table > Border">
        <Setter Property="Margin" Value="0" />
        <Setter Property="BorderThickness" Value="1,1,0,0" />
        <Setter Property="BorderBrush" Value="{DynamicResource SukiBorderBrush}" />
        <Setter Property="Padding" Value="6,4" />
    </Style>
    <Style Selector=".Markdown_Avalonia_MarkdownViewer Grid.Table">
        <Setter Property="mdc:AutoScaleColumnDefinitions.IsEnabled" Value="True" />
    </Style>
    <Style Selector=".Markdown_Avalonia_MarkdownViewer Border.TightTable">
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>

    <!-- 表头样式 -->
    <Style Selector=".Markdown_Avalonia_MarkdownViewer Border.TableHeader">
        <Setter Property="Background" Value="{DynamicResource SukiPrimaryColor15}" />
    </Style>
    <Style Selector=".Markdown_Avalonia_MarkdownViewer Border.TableHeader ctxt|CTextBlock">
        <Setter Property="FontWeight" Value="DemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource SukiText}" />
    </Style>

    <!-- 表格奇数行 -->
    <Style Selector=".Markdown_Avalonia_MarkdownViewer Border.OddTableRow">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <!-- 表格偶数行 -->
    <Style Selector=".Markdown_Avalonia_MarkdownViewer Border.EvenTableRow">
        <Setter Property="Background" Value="{DynamicResource SukiPrimaryColor5}" />
    </Style>

    <!-- ==================== 引用块样式 ==================== -->
    <Style Selector=".Markdown_Avalonia_MarkdownViewer Border.Blockquote">
        <Setter Property="BorderBrush" Value="{DynamicResource SukiPrimaryColor20}" />
        <Setter Property="BorderThickness" Value="4,0,0,0" />
        <Setter Property="CornerRadius" Value="0,6,6,0" />
    </Style>
    <Style Selector=".Markdown_Avalonia_MarkdownViewer StackPanel.Blockquote">
        <Setter Property="Margin" Value="10,1,10,5" />
    </Style>

    <!-- ==================== 超链接样式 ==================== -->
    <Style Selector=".Markdown_Avalonia_MarkdownViewer ctxt|CHyperlink">
        <Setter Property="IsUnderline" Value="True" />
        <Setter Property="Foreground" Value="{DynamicResource SukiPrimaryColor}" />
        <Setter Property="HoverForeground" Value="{DynamicResource SukiAccentColor}" />
    </Style>

    <!-- ==================== 分隔线样式 ==================== -->
    <Style Selector=".Markdown_Avalonia_MarkdownViewer mdc|Rule">
        <Setter Property="Margin" Value="0,3" />
    </Style>
    <!-- ==================== 段落样式 ==================== -->
    <Style Selector=".Markdown_Avalonia_MarkdownViewer ctxt|CTextBlock.Paragraph">
        <Setter Property="Foreground" Value="{DynamicResource SukiText}" />
        <Setter Property="Margin" Value="0,7,0,0" />
    </Style>

